<% if user_signed_in? && current_user.admin? %>

    <p id="notice"><%= notice %></p>
    
    <h1>Listing Users</h1>
    <table class="table table-striped" id = "order_Address">
      <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email Address</th>
          <th>Admin</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.FirstName %></td>
            <td><%= user.LastName %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= link_to 'Show', user, :class => 'btn btn-success', :id => 'mycolor' %></td>
            <td><%= link_to 'Edit', edit_user_registration_path, :class => 'btn btn-info', :id => 'mycolor' %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :id => 'mycolor', :class => 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>   

<% if(!user_signed_in? || !current_user.admin?) %>
  <h2 class="center">Oops...This Page is Only Accessible To Admins</h2> 
<% end %>